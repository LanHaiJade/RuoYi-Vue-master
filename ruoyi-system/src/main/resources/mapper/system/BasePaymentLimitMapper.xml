<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BasePaymentLimitMapper">
    
    <resultMap type="BasePaymentLimit" id="BasePaymentLimitResult">
        <result property="id"    column="id"    />
        <result property="amount"    column="amount"    />
        <result property="amountLimit"    column="amount_limit"    />
        <result property="userId"    column="user_id"    />
        <result property="sbId"    column="sb_id"    />
        <result property="payType"    column="pay_type"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBasePaymentLimitVo">
        select id, amount, amount_limit, user_id, sb_id, pay_type, update_time, create_time from base_payment_limit
    </sql>

    <select id="selectBasePaymentLimitList" parameterType="BasePaymentLimit" resultMap="BasePaymentLimitResult">
        <include refid="selectBasePaymentLimitVo"/>
        <where>  
            <if test="amount != null "> and amount = #{amount}</if>
            <if test="amountLimit != null "> and amount_limit = #{amountLimit}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="sbId != null  and sbId != ''"> and sb_id = #{sbId}</if>
            <if test="payType != null "> and pay_type = #{payType}</if>
        </where>
    </select>
    
    <select id="selectBasePaymentLimitById" parameterType="Integer" resultMap="BasePaymentLimitResult">
        <include refid="selectBasePaymentLimitVo"/>
        where id = #{id}
    </select>

    <insert id="insertBasePaymentLimit" parameterType="BasePaymentLimit" useGeneratedKeys="true" keyProperty="id">
        insert into base_payment_limit
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="amount != null">amount,</if>
            <if test="amountLimit != null">amount_limit,</if>
            <if test="userId != null">user_id,</if>
            <if test="sbId != null">sb_id,</if>
            <if test="payType != null">pay_type,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="amount != null">#{amount},</if>
            <if test="amountLimit != null">#{amountLimit},</if>
            <if test="userId != null">#{userId},</if>
            <if test="sbId != null">#{sbId},</if>
            <if test="payType != null">#{payType},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBasePaymentLimit" parameterType="BasePaymentLimit">
        update base_payment_limit
        <trim prefix="SET" suffixOverrides=",">
            <if test="amount != null">amount = #{amount},</if>
            <if test="amountLimit != null">amount_limit = #{amountLimit},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="sbId != null">sb_id = #{sbId},</if>
            <if test="payType != null">pay_type = #{payType},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBasePaymentLimitById" parameterType="Integer">
        delete from base_payment_limit where id = #{id}
    </delete>

    <delete id="deleteBasePaymentLimitByIds" parameterType="String">
        delete from base_payment_limit where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>