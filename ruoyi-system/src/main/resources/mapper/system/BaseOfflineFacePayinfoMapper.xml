<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BaseOfflineFacePayinfoMapper">
    
    <resultMap type="BaseOfflineFacePayinfo" id="BaseOfflineFacePayinfoResult">
        <result property="id"    column="id"    />
        <result property="orderNo"    column="order_no"    />
        <result property="userName"    column="user_name"    />
        <result property="outUserId"    column="out_user_id"    />
        <result property="openId"    column="openId"    />
    </resultMap>

    <sql id="selectBaseOfflineFacePayinfoVo">
        select id, order_no, user_name, out_user_id, openId from base_offline_face_payinfo
    </sql>

    <select id="selectBaseOfflineFacePayinfoList" parameterType="BaseOfflineFacePayinfo" resultMap="BaseOfflineFacePayinfoResult">
        <include refid="selectBaseOfflineFacePayinfoVo"/>
        <where>  
            <if test="orderNo != null  and orderNo != ''"> and order_no = #{orderNo}</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="outUserId != null  and outUserId != ''"> and out_user_id = #{outUserId}</if>
            <if test="openId != null  and openId != ''"> and openId = #{openId}</if>
        </where>
    </select>
    
    <select id="selectBaseOfflineFacePayinfoById" parameterType="Long" resultMap="BaseOfflineFacePayinfoResult">
        <include refid="selectBaseOfflineFacePayinfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertBaseOfflineFacePayinfo" parameterType="BaseOfflineFacePayinfo" useGeneratedKeys="true" keyProperty="id">
        insert into base_offline_face_payinfo
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderNo != null">order_no,</if>
            <if test="userName != null">user_name,</if>
            <if test="outUserId != null">out_user_id,</if>
            <if test="openId != null">openId,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderNo != null">#{orderNo},</if>
            <if test="userName != null">#{userName},</if>
            <if test="outUserId != null">#{outUserId},</if>
            <if test="openId != null">#{openId},</if>
         </trim>
    </insert>

    <update id="updateBaseOfflineFacePayinfo" parameterType="BaseOfflineFacePayinfo">
        update base_offline_face_payinfo
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderNo != null">order_no = #{orderNo},</if>
            <if test="userName != null">user_name = #{userName},</if>
            <if test="outUserId != null">out_user_id = #{outUserId},</if>
            <if test="openId != null">openId = #{openId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBaseOfflineFacePayinfoById" parameterType="Long">
        delete from base_offline_face_payinfo where id = #{id}
    </delete>

    <delete id="deleteBaseOfflineFacePayinfoByIds" parameterType="String">
        delete from base_offline_face_payinfo where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>