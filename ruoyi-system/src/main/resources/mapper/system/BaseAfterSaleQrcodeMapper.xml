<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BaseAfterSaleQrcodeMapper">
    
    <resultMap type="BaseAfterSaleQrcode" id="BaseAfterSaleQrcodeResult">
        <result property="id"    column="id"    />
        <result property="workerName"    column="worker_name"    />
        <result property="qrcodeUrl"    column="qrcode_url"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBaseAfterSaleQrcodeVo">
        select id, worker_name, qrcode_url, create_time from base_after_sale_qrcode
    </sql>

    <select id="selectBaseAfterSaleQrcodeList" parameterType="BaseAfterSaleQrcode" resultMap="BaseAfterSaleQrcodeResult">
        <include refid="selectBaseAfterSaleQrcodeVo"/>
        <where>  
            <if test="workerName != null  and workerName != ''"> and worker_name like concat('%', #{workerName}, '%')</if>
            <if test="qrcodeUrl != null  and qrcodeUrl != ''"> and qrcode_url = #{qrcodeUrl}</if>
        </where>
    </select>
    
    <select id="selectBaseAfterSaleQrcodeById" parameterType="Long" resultMap="BaseAfterSaleQrcodeResult">
        <include refid="selectBaseAfterSaleQrcodeVo"/>
        where id = #{id}
    </select>

    <insert id="insertBaseAfterSaleQrcode" parameterType="BaseAfterSaleQrcode" useGeneratedKeys="true" keyProperty="id">
        insert into base_after_sale_qrcode
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="workerName != null">worker_name,</if>
            <if test="qrcodeUrl != null">qrcode_url,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="workerName != null">#{workerName},</if>
            <if test="qrcodeUrl != null">#{qrcodeUrl},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBaseAfterSaleQrcode" parameterType="BaseAfterSaleQrcode">
        update base_after_sale_qrcode
        <trim prefix="SET" suffixOverrides=",">
            <if test="workerName != null">worker_name = #{workerName},</if>
            <if test="qrcodeUrl != null">qrcode_url = #{qrcodeUrl},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBaseAfterSaleQrcodeById" parameterType="Long">
        delete from base_after_sale_qrcode where id = #{id}
    </delete>

    <delete id="deleteBaseAfterSaleQrcodeByIds" parameterType="String">
        delete from base_after_sale_qrcode where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>