<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BaseGoodsCommentMapper">
    
    <resultMap type="BaseGoodsComment" id="BaseGoodsCommentResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="openId"    column="open_id"    />
        <result property="goodsId"    column="goods_id"    />
        <result property="goodsName"    column="goods_name"    />
        <result property="amount"    column="amount"    />
        <result property="comment"    column="comment"    />
        <result property="hideUser"    column="hide_user"    />
        <result property="status"    column="status"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBaseGoodsCommentVo">
        select id, user_id, open_id, goods_id, goods_name, amount, comment, hide_user, status, update_time, create_time from base_goods_comment
    </sql>

    <select id="selectBaseGoodsCommentList" parameterType="BaseGoodsComment" resultMap="BaseGoodsCommentResult">
        <include refid="selectBaseGoodsCommentVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="openId != null  and openId != ''"> and open_id = #{openId}</if>
            <if test="goodsId != null "> and goods_id = #{goodsId}</if>
            <if test="goodsName != null  and goodsName != ''"> and goods_name like concat('%', #{goodsName}, '%')</if>
            <if test="amount != null "> and amount = #{amount}</if>
            <if test="comment != null  and comment != ''"> and comment = #{comment}</if>
            <if test="hideUser != null "> and hide_user = #{hideUser}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBaseGoodsCommentById" parameterType="Long" resultMap="BaseGoodsCommentResult">
        <include refid="selectBaseGoodsCommentVo"/>
        where id = #{id}
    </select>

    <insert id="insertBaseGoodsComment" parameterType="BaseGoodsComment" useGeneratedKeys="true" keyProperty="id">
        insert into base_goods_comment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="openId != null">open_id,</if>
            <if test="goodsId != null">goods_id,</if>
            <if test="goodsName != null">goods_name,</if>
            <if test="amount != null">amount,</if>
            <if test="comment != null">comment,</if>
            <if test="hideUser != null">hide_user,</if>
            <if test="status != null">status,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="openId != null">#{openId},</if>
            <if test="goodsId != null">#{goodsId},</if>
            <if test="goodsName != null">#{goodsName},</if>
            <if test="amount != null">#{amount},</if>
            <if test="comment != null">#{comment},</if>
            <if test="hideUser != null">#{hideUser},</if>
            <if test="status != null">#{status},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBaseGoodsComment" parameterType="BaseGoodsComment">
        update base_goods_comment
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="openId != null">open_id = #{openId},</if>
            <if test="goodsId != null">goods_id = #{goodsId},</if>
            <if test="goodsName != null">goods_name = #{goodsName},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="comment != null">comment = #{comment},</if>
            <if test="hideUser != null">hide_user = #{hideUser},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBaseGoodsCommentById" parameterType="Long">
        delete from base_goods_comment where id = #{id}
    </delete>

    <delete id="deleteBaseGoodsCommentByIds" parameterType="String">
        delete from base_goods_comment where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>