<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BaseUserRechargeMapper">
    
    <resultMap type="BaseUserRecharge" id="BaseUserRechargeResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="payId"    column="pay_id"    />
        <result property="price"    column="price"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="priceSer"    column="price_ser"    />
    </resultMap>

    <sql id="selectBaseUserRechargeVo">
        select id, user_id, pay_id, price, status, create_time, price_ser from base_user_recharge
    </sql>

    <select id="selectBaseUserRechargeList" parameterType="BaseUserRecharge" resultMap="BaseUserRechargeResult">
        <include refid="selectBaseUserRechargeVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="payId != null "> and pay_id = #{payId}</if>
            <if test="price != null "> and price = #{price}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="priceSer != null "> and price_ser = #{priceSer}</if>
        </where>
    </select>
    
    <select id="selectBaseUserRechargeById" parameterType="Long" resultMap="BaseUserRechargeResult">
        <include refid="selectBaseUserRechargeVo"/>
        where id = #{id}
    </select>

    <insert id="insertBaseUserRecharge" parameterType="BaseUserRecharge" useGeneratedKeys="true" keyProperty="id">
        insert into base_user_recharge
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="payId != null">pay_id,</if>
            <if test="price != null">price,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="priceSer != null">price_ser,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="payId != null">#{payId},</if>
            <if test="price != null">#{price},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="priceSer != null">#{priceSer},</if>
         </trim>
    </insert>

    <update id="updateBaseUserRecharge" parameterType="BaseUserRecharge">
        update base_user_recharge
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="payId != null">pay_id = #{payId},</if>
            <if test="price != null">price = #{price},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="priceSer != null">price_ser = #{priceSer},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBaseUserRechargeById" parameterType="Long">
        delete from base_user_recharge where id = #{id}
    </delete>

    <delete id="deleteBaseUserRechargeByIds" parameterType="String">
        delete from base_user_recharge where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>