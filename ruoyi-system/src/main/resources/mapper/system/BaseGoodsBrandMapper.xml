<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BaseGoodsBrandMapper">
    
    <resultMap type="BaseGoodsBrand" id="BaseGoodsBrandResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="status"    column="status"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBaseGoodsBrandVo">
        select id, name, status, update_time, create_time from base_goods_brand
    </sql>

    <select id="selectBaseGoodsBrandList" parameterType="BaseGoodsBrand" resultMap="BaseGoodsBrandResult">
        <include refid="selectBaseGoodsBrandVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBaseGoodsBrandById" parameterType="Long" resultMap="BaseGoodsBrandResult">
        <include refid="selectBaseGoodsBrandVo"/>
        where id = #{id}
    </select>

    <insert id="insertBaseGoodsBrand" parameterType="BaseGoodsBrand" useGeneratedKeys="true" keyProperty="id">
        insert into base_goods_brand
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="status != null">status,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="status != null">#{status},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBaseGoodsBrand" parameterType="BaseGoodsBrand">
        update base_goods_brand
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBaseGoodsBrandById" parameterType="Long">
        delete from base_goods_brand where id = #{id}
    </delete>

    <delete id="deleteBaseGoodsBrandByIds" parameterType="String">
        delete from base_goods_brand where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>