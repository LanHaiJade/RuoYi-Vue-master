<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BaseActiveGoodsMapper">
    
    <resultMap type="BaseActiveGoods" id="BaseActiveGoodsResult">
        <result property="id"    column="id"    />
        <result property="sbId"    column="sb_id"    />
        <result property="huodao"    column="huodao"    />
        <result property="goodsName"    column="goods_name"    />
        <result property="goodsPicurl"    column="goods_picurl"    />
        <result property="status"    column="status"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBaseActiveGoodsVo">
        select id, sb_id, huodao, goods_name, goods_picurl, status, update_time, create_time from base_active_goods
    </sql>

    <select id="selectBaseActiveGoodsList" parameterType="BaseActiveGoods" resultMap="BaseActiveGoodsResult">
        <include refid="selectBaseActiveGoodsVo"/>
        <where>  
            <if test="sbId != null  and sbId != ''"> and sb_id = #{sbId}</if>
            <if test="huodao != null "> and huodao = #{huodao}</if>
            <if test="goodsName != null  and goodsName != ''"> and goods_name like concat('%', #{goodsName}, '%')</if>
            <if test="goodsPicurl != null  and goodsPicurl != ''"> and goods_picurl = #{goodsPicurl}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBaseActiveGoodsById" parameterType="Long" resultMap="BaseActiveGoodsResult">
        <include refid="selectBaseActiveGoodsVo"/>
        where id = #{id}
    </select>

    <insert id="insertBaseActiveGoods" parameterType="BaseActiveGoods" useGeneratedKeys="true" keyProperty="id">
        insert into base_active_goods
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sbId != null">sb_id,</if>
            <if test="huodao != null">huodao,</if>
            <if test="goodsName != null">goods_name,</if>
            <if test="goodsPicurl != null">goods_picurl,</if>
            <if test="status != null">status,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sbId != null">#{sbId},</if>
            <if test="huodao != null">#{huodao},</if>
            <if test="goodsName != null">#{goodsName},</if>
            <if test="goodsPicurl != null">#{goodsPicurl},</if>
            <if test="status != null">#{status},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBaseActiveGoods" parameterType="BaseActiveGoods">
        update base_active_goods
        <trim prefix="SET" suffixOverrides=",">
            <if test="sbId != null">sb_id = #{sbId},</if>
            <if test="huodao != null">huodao = #{huodao},</if>
            <if test="goodsName != null">goods_name = #{goodsName},</if>
            <if test="goodsPicurl != null">goods_picurl = #{goodsPicurl},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBaseActiveGoodsById" parameterType="Long">
        delete from base_active_goods where id = #{id}
    </delete>

    <delete id="deleteBaseActiveGoodsByIds" parameterType="String">
        delete from base_active_goods where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>