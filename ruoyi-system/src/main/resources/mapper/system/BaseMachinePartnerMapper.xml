<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BaseMachinePartnerMapper">
    
    <resultMap type="BaseMachinePartner" id="BaseMachinePartnerResult">
        <result property="userId"    column="user_id"    />
        <result property="machineId"    column="machine_id"    />
        <result property="roleType"    column="role_type"    />
    </resultMap>

    <sql id="selectBaseMachinePartnerVo">
        select user_id, machine_id, role_type from base_machine_partner
    </sql>

    <select id="selectBaseMachinePartnerList" parameterType="BaseMachinePartner" resultMap="BaseMachinePartnerResult">
        <include refid="selectBaseMachinePartnerVo"/>
        <where>  
            <if test="roleType != null "> and role_type = #{roleType}</if>
        </where>
    </select>
    
    <select id="selectBaseMachinePartnerByUserId" parameterType="Long" resultMap="BaseMachinePartnerResult">
        <include refid="selectBaseMachinePartnerVo"/>
        where user_id = #{userId}
    </select>

    <insert id="insertBaseMachinePartner" parameterType="BaseMachinePartner">
        insert into base_machine_partner
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="machineId != null">machine_id,</if>
            <if test="roleType != null">role_type,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="machineId != null">#{machineId},</if>
            <if test="roleType != null">#{roleType},</if>
         </trim>
    </insert>

    <update id="updateBaseMachinePartner" parameterType="BaseMachinePartner">
        update base_machine_partner
        <trim prefix="SET" suffixOverrides=",">
            <if test="machineId != null">machine_id = #{machineId},</if>
            <if test="roleType != null">role_type = #{roleType},</if>
        </trim>
        where user_id = #{userId}
    </update>

    <delete id="deleteBaseMachinePartnerByUserId" parameterType="Long">
        delete from base_machine_partner where user_id = #{userId}
    </delete>

    <delete id="deleteBaseMachinePartnerByUserIds" parameterType="String">
        delete from base_machine_partner where user_id in 
        <foreach item="userId" collection="array" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>
</mapper>