<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BaseMachineRepairMapper">
    
    <resultMap type="BaseMachineRepair" id="BaseMachineRepairResult">
        <result property="userId"    column="user_id"    />
        <result property="machineId"    column="machine_id"    />
    </resultMap>

    <sql id="selectBaseMachineRepairVo">
        select user_id, machine_id from base_machine_repair
    </sql>

    <select id="selectBaseMachineRepairList" parameterType="BaseMachineRepair" resultMap="BaseMachineRepairResult">
        <include refid="selectBaseMachineRepairVo"/>
        <where>  
        </where>
    </select>
    
    <select id="selectBaseMachineRepairByUserId" parameterType="Long" resultMap="BaseMachineRepairResult">
        <include refid="selectBaseMachineRepairVo"/>
        where user_id = #{userId}
    </select>

    <insert id="insertBaseMachineRepair" parameterType="BaseMachineRepair">
        insert into base_machine_repair
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="machineId != null">machine_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="machineId != null">#{machineId},</if>
         </trim>
    </insert>

    <update id="updateBaseMachineRepair" parameterType="BaseMachineRepair">
        update base_machine_repair
        <trim prefix="SET" suffixOverrides=",">
            <if test="machineId != null">machine_id = #{machineId},</if>
        </trim>
        where user_id = #{userId}
    </update>

    <delete id="deleteBaseMachineRepairByUserId" parameterType="Long">
        delete from base_machine_repair where user_id = #{userId}
    </delete>

    <delete id="deleteBaseMachineRepairByUserIds" parameterType="String">
        delete from base_machine_repair where user_id in 
        <foreach item="userId" collection="array" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>
</mapper>