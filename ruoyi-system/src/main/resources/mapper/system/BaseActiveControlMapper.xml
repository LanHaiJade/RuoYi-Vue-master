<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BaseActiveControlMapper">
    
    <resultMap type="BaseActiveControl" id="BaseActiveControlResult">
        <result property="id"    column="id"    />
        <result property="sbId"    column="sb_id"    />
        <result property="controlStatus"    column="control_status"    />
        <result property="status"    column="status"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBaseActiveControlVo">
        select id, sb_id, control_status, status, update_time, create_time from base_active_control
    </sql>

    <select id="selectBaseActiveControlList" parameterType="BaseActiveControl" resultMap="BaseActiveControlResult">
        <include refid="selectBaseActiveControlVo"/>
        <where>  
            <if test="sbId != null  and sbId != ''"> and sb_id = #{sbId}</if>
            <if test="controlStatus != null "> and control_status = #{controlStatus}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBaseActiveControlById" parameterType="Long" resultMap="BaseActiveControlResult">
        <include refid="selectBaseActiveControlVo"/>
        where id = #{id}
    </select>

    <insert id="insertBaseActiveControl" parameterType="BaseActiveControl" useGeneratedKeys="true" keyProperty="id">
        insert into base_active_control
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sbId != null">sb_id,</if>
            <if test="controlStatus != null">control_status,</if>
            <if test="status != null">status,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sbId != null">#{sbId},</if>
            <if test="controlStatus != null">#{controlStatus},</if>
            <if test="status != null">#{status},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBaseActiveControl" parameterType="BaseActiveControl">
        update base_active_control
        <trim prefix="SET" suffixOverrides=",">
            <if test="sbId != null">sb_id = #{sbId},</if>
            <if test="controlStatus != null">control_status = #{controlStatus},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBaseActiveControlById" parameterType="Long">
        delete from base_active_control where id = #{id}
    </delete>

    <delete id="deleteBaseActiveControlByIds" parameterType="String">
        delete from base_active_control where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>