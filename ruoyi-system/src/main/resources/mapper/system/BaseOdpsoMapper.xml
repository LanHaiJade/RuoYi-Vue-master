<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BaseOdpsoMapper">
    
    <resultMap type="BaseOdpso" id="BaseOdpsoResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="phone"    column="phone"    />
        <result property="openid"    column="openid"    />
        <result property="orderNo"    column="order_no"    />
        <result property="number"    column="number"    />
        <result property="years"    column="years"    />
        <result property="amount"    column="amount"    />
        <result property="status"    column="status"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBaseOdpsoVo">
        select id, name, phone, openid, order_no, number, years, amount, status, update_time, create_time from base_odpso
    </sql>

    <select id="selectBaseOdpsoList" parameterType="BaseOdpso" resultMap="BaseOdpsoResult">
        <include refid="selectBaseOdpsoVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="openid != null  and openid != ''"> and openid = #{openid}</if>
            <if test="orderNo != null  and orderNo != ''"> and order_no = #{orderNo}</if>
            <if test="number != null "> and number = #{number}</if>
            <if test="years != null "> and years = #{years}</if>
            <if test="amount != null "> and amount = #{amount}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBaseOdpsoById" parameterType="Integer" resultMap="BaseOdpsoResult">
        <include refid="selectBaseOdpsoVo"/>
        where id = #{id}
    </select>

    <insert id="insertBaseOdpso" parameterType="BaseOdpso" useGeneratedKeys="true" keyProperty="id">
        insert into base_odpso
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="phone != null">phone,</if>
            <if test="openid != null">openid,</if>
            <if test="orderNo != null">order_no,</if>
            <if test="number != null">number,</if>
            <if test="years != null">years,</if>
            <if test="amount != null">amount,</if>
            <if test="status != null">status,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="phone != null">#{phone},</if>
            <if test="openid != null">#{openid},</if>
            <if test="orderNo != null">#{orderNo},</if>
            <if test="number != null">#{number},</if>
            <if test="years != null">#{years},</if>
            <if test="amount != null">#{amount},</if>
            <if test="status != null">#{status},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBaseOdpso" parameterType="BaseOdpso">
        update base_odpso
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="openid != null">openid = #{openid},</if>
            <if test="orderNo != null">order_no = #{orderNo},</if>
            <if test="number != null">number = #{number},</if>
            <if test="years != null">years = #{years},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBaseOdpsoById" parameterType="Integer">
        delete from base_odpso where id = #{id}
    </delete>

    <delete id="deleteBaseOdpsoByIds" parameterType="String">
        delete from base_odpso where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>