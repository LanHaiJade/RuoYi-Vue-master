    <select id="selectBaseIccardList" parameterType="BaseIccard" resultMap="BaseIccardResult">
        <include refid="selectBaseIccardVo"/>
        <where>
            <if test="idNo != null  and idNo != ''"> and id_no like concat('%', #{idNo}, '%')</if>
            <if test="cpuNo != null  and cpuNo != ''"> and cpu_no like concat('%', #{cpuNo}, '%')</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="balance != null "> and balance = #{balance}</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="ctrlUserId != null "> and ctrl_user_id = #{ctrlUserId}</if>
            <if test="ctrlUserName != null  and ctrlUserName != ''"> and ctrl_user_name like concat('%', #{ctrlUserName}, '%')</if>
        </where>
        ORDER BY create_time DESC
    </select>
    
    <select id="selectBaseIccardById" parameterType="Long" resultMap="BaseIccardResult">
        <include refid="selectBaseIccardVo"/>
        where id = #{id}
    </select>

    <select id="selectBaseIccardIds" parameterType="BaseIccard" resultMap="BaseIccardResult">
        <include refid="selectBaseIccardVo"/>
        <where>
            <if test="ids != null and ids.size() > 0">
                id IN
                <foreach collection="ids" item="id" open="(" close=")" separator=",">
                    #{id}
                </foreach>
            </if>
        </where>
    </select>


    <select id="selectBaseIccard" parameterType="BaseIccard" resultMap="BaseIccardResult">
        <include refid="selectBaseIccardVo"/>
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

