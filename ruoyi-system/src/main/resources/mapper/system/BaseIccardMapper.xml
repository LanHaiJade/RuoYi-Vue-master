    <update id="updateBaseIccard" parameterType="BaseIccard">
        update base_iccard
        <trim prefix="SET" suffixOverrides=",">
            <if test="idNo != null">id_no = #{idNo},</if>
            <if test="cpuNo != null">cpu_no = #{cpuNo},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="status != null">status = #{status},</if>
            <if test="balance != null">balance = #{balance},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="ctrlUserId != null">ctrl_user_id = #{ctrlUserId},</if>
            <if test="ctrlUserName != null">ctrl_user_name = #{ctrlUserName},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="updateBaseIccardIds">
        UPDATE base_iccard
        SET
        balance =
        CASE id
        <foreach collection="iccardList" item="item">
            WHEN #{item.id} THEN #{item.balance}
        </foreach>
        ELSE balance
        END,
        update_time =
        CASE id
        <foreach collection="iccardList" item="item">
            WHEN #{item.id} THEN
            <choose>
                <when test="item.updateTime != null">#{item.updateTime}</when>
                <otherwise>NOW()</otherwise>
            </choose>
        </foreach>
        ELSE update_time
        END,
        <!-- 新增：status字段批量修改（核心新增代码） -->
        status =
        CASE id
        <foreach collection="iccardList" item="item">
            WHEN #{item.id} THEN #{item.status}
        </foreach>
        ELSE status
        END,
        ctrl_user_id =
        CASE id
        <foreach collection="iccardList" item="item">
            WHEN #{item.id} THEN #{item.ctrlUserId}
        </foreach>
        ELSE ctrl_user_id
        END,
        ctrl_user_name =
        CASE id
        <foreach collection="iccardList" item="item">
            WHEN #{item.id} THEN #{item.ctrlUserName}
        </foreach>
        ELSE ctrl_user_name
        END,
        remark =
        CASE id
        <foreach collection="iccardList" item="item">
            WHEN #{item.id} THEN #{item.remark}
        </foreach>
        ELSE remark
        END
        WHERE id IN
        <foreach collection="iccardList" item="item" open="(" separator="," close=")">
            #{item.id}
        </foreach>
    </update>

    <delete id="deleteBaseIccardById" parameterType="Long">
        delete from base_iccard where id = #{id}
    </delete>

    <delete id="deleteBaseIccardByIds" parameterType="String">
        delete from base_iccard where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>


    <!-- 批量插入IC卡信息 -->
    <insert id="batchInsertBaseIccard" parameterType="java.util.List">
        INSERT INTO base_iccard (
        id_no,
        cpu_no,
        user_id,
        name,
        status,
        balance,
        phone,
        remark,
        create_time,
        update_time
        ) VALUES
        <foreach collection="list" item="item" separator=",">
            (
            #{item.idNo},
            #{item.cpuNo},
            #{item.userId},
            #{item.name},
            #{item.status},
            #{item.balance},
            #{item.phone},
            #{item.remark},
            NOW(),
            NOW()
            )
        </foreach>
    </insert>

