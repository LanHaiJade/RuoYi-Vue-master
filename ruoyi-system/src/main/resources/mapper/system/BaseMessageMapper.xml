<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BaseMessageMapper">
    
    <resultMap type="BaseMessage" id="BaseMessageResult">
        <result property="id"    column="id"    />
        <result property="roleId"    column="role_id"    />
        <result property="userId"    column="user_id"    />
        <result property="url"    column="url"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBaseMessageVo">
        select id, role_id, user_id, url, start_time, end_time, status, create_time from base_message
    </sql>

    <select id="selectBaseMessageList" parameterType="BaseMessage" resultMap="BaseMessageResult">
        <include refid="selectBaseMessageVo"/>
        <where>  
            <if test="roleId != null "> and role_id = #{roleId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="url != null  and url != ''"> and url = #{url}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
            <if test="endTime != null "> and end_time = #{endTime}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBaseMessageById" parameterType="Long" resultMap="BaseMessageResult">
        <include refid="selectBaseMessageVo"/>
        where id = #{id}
    </select>

    <insert id="insertBaseMessage" parameterType="BaseMessage" useGeneratedKeys="true" keyProperty="id">
        insert into base_message
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="roleId != null">role_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="url != null">url,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="roleId != null">#{roleId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="url != null">#{url},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBaseMessage" parameterType="BaseMessage">
        update base_message
        <trim prefix="SET" suffixOverrides=",">
            <if test="roleId != null">role_id = #{roleId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="url != null">url = #{url},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBaseMessageById" parameterType="Long">
        delete from base_message where id = #{id}
    </delete>

    <delete id="deleteBaseMessageByIds" parameterType="String">
        delete from base_message where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>