<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BasePaymentBlacklistMapper">
    
    <resultMap type="BasePaymentBlacklist" id="BasePaymentBlacklistResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="openId"    column="open_id"    />
        <result property="userName"    column="user_name"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBasePaymentBlacklistVo">
        select id, user_id, open_id, user_name, status, create_time from base_payment_blacklist
    </sql>

    <select id="selectBasePaymentBlacklistList" parameterType="BasePaymentBlacklist" resultMap="BasePaymentBlacklistResult">
        <include refid="selectBasePaymentBlacklistVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="openId != null  and openId != ''"> and open_id = #{openId}</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBasePaymentBlacklistById" parameterType="Long" resultMap="BasePaymentBlacklistResult">
        <include refid="selectBasePaymentBlacklistVo"/>
        where id = #{id}
    </select>

    <insert id="insertBasePaymentBlacklist" parameterType="BasePaymentBlacklist" useGeneratedKeys="true" keyProperty="id">
        insert into base_payment_blacklist
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="openId != null and openId != ''">open_id,</if>
            <if test="userName != null and userName != ''">user_name,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="openId != null and openId != ''">#{openId},</if>
            <if test="userName != null and userName != ''">#{userName},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBasePaymentBlacklist" parameterType="BasePaymentBlacklist">
        update base_payment_blacklist
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="openId != null and openId != ''">open_id = #{openId},</if>
            <if test="userName != null and userName != ''">user_name = #{userName},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBasePaymentBlacklistById" parameterType="Long">
        delete from base_payment_blacklist where id = #{id}
    </delete>

    <delete id="deleteBasePaymentBlacklistByIds" parameterType="String">
        delete from base_payment_blacklist where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>