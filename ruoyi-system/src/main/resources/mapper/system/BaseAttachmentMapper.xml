<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BaseAttachmentMapper">
    
    <resultMap type="BaseAttachment" id="BaseAttachmentResult">
        <result property="id"    column="id"    />
        <result property="filePath"    column="file_path"    />
        <result property="belongId"    column="belong_id"    />
        <result property="belongType"    column="belong_type"    />
        <result property="creatorId"    column="creator_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="status"    column="status"    />
        <result property="oss"    column="oss"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectBaseAttachmentVo">
        select id, file_path, belong_id, belong_type, creator_id, create_time, status, oss, remark from base_attachment
    </sql>

    <select id="selectBaseAttachmentList" parameterType="BaseAttachment" resultMap="BaseAttachmentResult">
        <include refid="selectBaseAttachmentVo"/>
        <where>  
            <if test="filePath != null  and filePath != ''"> and file_path = #{filePath}</if>
            <if test="belongId != null "> and belong_id = #{belongId}</if>
            <if test="belongType != null "> and belong_type = #{belongType}</if>
            <if test="creatorId != null "> and creator_id = #{creatorId}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="oss != null "> and oss = #{oss}</if>
        </where>
    </select>
    
    <select id="selectBaseAttachmentById" parameterType="Long" resultMap="BaseAttachmentResult">
        <include refid="selectBaseAttachmentVo"/>
        where id = #{id}
    </select>

    <insert id="insertBaseAttachment" parameterType="BaseAttachment" useGeneratedKeys="true" keyProperty="id">
        insert into base_attachment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="filePath != null">file_path,</if>
            <if test="belongId != null">belong_id,</if>
            <if test="belongType != null">belong_type,</if>
            <if test="creatorId != null">creator_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="status != null">status,</if>
            <if test="oss != null">oss,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="filePath != null">#{filePath},</if>
            <if test="belongId != null">#{belongId},</if>
            <if test="belongType != null">#{belongType},</if>
            <if test="creatorId != null">#{creatorId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="status != null">#{status},</if>
            <if test="oss != null">#{oss},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateBaseAttachment" parameterType="BaseAttachment">
        update base_attachment
        <trim prefix="SET" suffixOverrides=",">
            <if test="filePath != null">file_path = #{filePath},</if>
            <if test="belongId != null">belong_id = #{belongId},</if>
            <if test="belongType != null">belong_type = #{belongType},</if>
            <if test="creatorId != null">creator_id = #{creatorId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="oss != null">oss = #{oss},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBaseAttachmentById" parameterType="Long">
        delete from base_attachment where id = #{id}
    </delete>

    <delete id="deleteBaseAttachmentByIds" parameterType="String">
        delete from base_attachment where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>